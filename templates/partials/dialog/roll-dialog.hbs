<form>
  <div class="form-group pad-bottom">
    <label for="bonus" class="title">
      {{localize "legends.roll.dialog.bonus"}}
    </label>
    <input name="bonus" class="hand" type="number" min="0" max="10" value={{bonusValue}} />
    <small class="form-text text">
      {{localize "legends.roll.dialog.bonus-description" bonusesAppliedMessage = bonusMessage}}
    </small>
  </div>
  <div class="form-group">
    <label for="penalty" class="title">
      {{localize "legends.roll.dialog.penalty"}}
    </label>
    <input name="penalty" class="hand" type="number" min="-10" max="10" value={{penaltyValue}} />
    <small class="form-text text">
      {{localize "legends.roll.dialog.penalty-description" penaltiesAppliedMessage = penaltyMessage}}
    </small>
  </div>
</form>

